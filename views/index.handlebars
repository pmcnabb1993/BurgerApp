 <div class="jumbotron">
        <div><img src="/assets/img/burger.png"></img></div>
      <h2 class="text-center">What The Burger!</h2>
      <h3 class="text-center">Keep track of the burgers you've eaten, and those you want
            to eat.</h3>
    </div>

<div class="container">

      <div class="row">
        <div class="col-sm-6 "> 
            <p class="cool-font">What's On The Menu</p>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
  </div>

<div class="col-sm-6 "> 
    <p class="cool-font">Burgers that have been eaten!</p>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
  </div>
    </div>

<div class="row">
    

<h2 class="cool-font">Add a Burger</h2>
<form class="create-form center">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="0" checked> Not Yet!<br>
    <input type="radio" name="devoured" value="1"> Yes!
  </div>

  <button type="submit" id="chirp-submit" class="btn btn-lg ">Add Burger</button>
</form>
    </div>

</div>
    
<!-- End container -->
    </div>
  <script type="text/javascript" src="/assets/js/app.js"></script>
