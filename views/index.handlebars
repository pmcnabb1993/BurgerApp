 <div class="jumbotron">
        <div><img src="assets/img/burger.png"></img></div>
      <h2 class="text-center">What The Burger!</h2>
    </div>

<div class="container">

      <div class="row">
        <div class="col-sm-8 col-sm-offset-2"> 
            <p class="cool-font">What's On The Menu</p>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block eaten=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been devoured</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block eaten=false}}
    {{/if}}
  {{/each}}
</ul>

<h2 class="cool-font">Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Yes!<br>
    <input type="radio" name="devoured" value="0"> Not Yet!
  </div>

  <button type="submit" id="chirp-submit" class="btn btn-lg pull-right">Add Burger</button>
</form>
    </div>
</div>
    

<!-- End container -->
    </div>

  <script type="text/javascript" src="js/burger.js"></script>
  </body>
</html>